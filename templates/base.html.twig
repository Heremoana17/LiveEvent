<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="{{asset("img/Logo.jpg")}}">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
		<script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>

		<nav class='py-2 bg-dark border-bottom'>
			<div class="container d-flex flex-row py-2">
				<div class="dropdown">
					<a class="nav-link link-light px-2 dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Mon blog</a>
					<ul class="dropdown-menu" aria-labelledby="dropdownAdminLink">
						<li>
							<a class="dropdown-item" href="">Tableau de bord</a>
						</li>
						<li>
							<a class="dropdown-item" href="">Menus</a>
						</li>
					</ul>
				</div>
				<div class="dropdown">
					<a class="nav-link link-light px-2 dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Ajouter</a>
					<ul class="dropdown-menu" aria-labelledby="dropdownAdminAdd">
						<li>
							<a class="dropdown-item" href="">Article</a>
						</li>
						<li>
							<a class="dropdown-item" href="">Page</a>
						</li>
					</ul>
				</div>

			</div>
		</nav>
		<div class='container'>
			<header class='d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom'>
				<a href="" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
					<span class='fs-4'>Mon blog</span>
				</a>
				<ul class="nav nav-pills">
					<li class="nav-item">
						<a class="nav-link text-dark" href="#">S'inscrire</a>
					</li>
					<li class="nav-item">
						<a class="nav-link text-dark" href="#">Se connecter</a>
					</li>
				</ul>
			</header>
		</div>
	</body>

	{% block body %}{% endblock %}

	<div class="container">
		<footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
			<div class="col-md-4 d-flex align-items-center">
				<span class="copyright">©
					{{ 'now'|date('Y') }}
					Live Event tous droits reservés</span>
			</div>
		</footer>
	</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</html>
